{% extends "base.html" %}

{% block title %}Sammanfattning{% endblock %}
{% block header %}Sammanfattning{% endblock %}
{% block subheader %}{{ summary_time }} · Artiklar: {{ n_articles }}{% endblock %}

{% block top_actions %}
  <a class="btn" href="{{ url_for('history') }}">Tillbaka</a>
  <a class="btn" href="{{ url_for('index') }}">Senaste</a>
{% endblock %}

{% block content %}
  <div class="grid">
    <div class="card">
      {{ summary_html|safe }}
    </div>

    <div class="card">
      <h3>Källor</h3>
      <ul>
        {% for a in articles %}
          <li style="margin-bottom: 10px;">
            <div><strong>{{ a.title }}</strong></div>
            <div class="muted">{{ a.source }}{% if a.published %} · {{ a.published }}{% endif %}</div>
            <div><a href="{{ a.url }}" target="_blank" rel="noopener">Öppna</a></div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
